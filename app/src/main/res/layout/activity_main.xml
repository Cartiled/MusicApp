<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/SongNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nameMusic"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/artistName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumView" />

    <ImageView
        android:id="@+id/albumView"
        android:layout_width="272dp"
        android:layout_height="295dp"
        app:layout_constraintBottom_toTopOf="@+id/SongNameView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/albumName"
        app:srcCompat="@drawable/_1mwie1bzwl__uf894_1000_ql80_" />

    <TextView
        android:id="@+id/albumName"
        android:layout_width="182dp"
        android:layout_height="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/albumName"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/albumView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/artist"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/timeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SongNameView" />

    <ProgressBar
        android:id="@+id/timeBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="269dp"
        android:layout_height="21dp"
        app:layout_constraintBottom_toTopOf="@+id/loopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationText"
        tools:progress="25" />

    <ImageView
        android:id="@+id/playButton"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@+id/soundBar"
        app:layout_constraintEnd_toStartOf="@+id/nextButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/previousButton"
        app:layout_constraintTop_toBottomOf="@+id/timeBar"
        app:srcCompat="@drawable/pngwing_com__3_" />

    <ImageView
        android:id="@+id/nextButton"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@+id/soundBar"
        app:layout_constraintEnd_toStartOf="@+id/loopButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/timeBar"
        app:srcCompat="@drawable/pngwing_com__4_" />

    <ImageView
        android:id="@+id/previousButton"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toTopOf="@+id/soundBar"
        app:layout_constraintEnd_toStartOf="@+id/playButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/randomButton"
        app:layout_constraintTop_toBottomOf="@+id/timeBar"
        app:srcCompat="@drawable/pngwing_com__5_" />

    <ProgressBar
        android:id="@+id/soundBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="268dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@+id/favouritButton"
        app:layout_constraintEnd_toStartOf="@+id/volumeIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButton"
        tools:progress="70" />

    <ImageView
        android:id="@+id/volumeIcon"
        android:layout_width="29dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@+id/listButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/soundBar"
        app:layout_constraintTop_toBottomOf="@+id/loopButton"
        app:srcCompat="@drawable/pngwing_com__7_" />

    <TextView
        android:id="@+id/durationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duration"
        app:layout_constraintBottom_toTopOf="@+id/timeBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/timeNowText"
        app:layout_constraintTop_toBottomOf="@+id/artistName" />

    <TextView
        android:id="@+id/timeNowText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actual"
        app:layout_constraintBottom_toTopOf="@+id/timeBar"
        app:layout_constraintEnd_toStartOf="@+id/durationText"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artistName"
        app:layout_constraintVertical_bias="0.47" />

    <ImageView
        android:id="@+id/randomButton"
        android:layout_width="36dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@+id/soundBar"
        app:layout_constraintEnd_toStartOf="@+id/previousButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeBar"
        app:srcCompat="@drawable/pngwing_com__8_" />

    <ImageView
        android:id="@+id/loopButton"
        android:layout_width="51dp"
        android:layout_height="46dp"
        app:layout_constraintBottom_toTopOf="@+id/soundBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nextButton"
        app:layout_constraintTop_toBottomOf="@+id/timeBar"
        app:srcCompat="@drawable/pngwing_com__9_" />

    <ImageView
        android:id="@+id/favouritButton"
        android:layout_width="48dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/listButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shareButton"
        app:layout_constraintTop_toBottomOf="@+id/soundBar"
        app:srcCompat="@drawable/pngwing_com" />

    <ImageView
        android:id="@+id/shareButton"
        android:layout_width="50dp"
        android:layout_height="38dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/favouritButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundBar"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/listButton"
        android:layout_width="56dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/favouritButton"
        app:layout_constraintTop_toBottomOf="@+id/soundBar"
        app:srcCompat="@drawable/_916404_200" />

</androidx.constraintlayout.widget.ConstraintLayout>